       <record model="ir.ui.view" id="view_account_analytic_account_sla">
           <field name="name">account_analytic_account_sla</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="account_analytic_account_improvements.account_analytic_account_improvements"/>
            <field name="arch" type="xml">
                <field name="contract_type_product_name" position="after">
