                    <field name="sla_status"/>
                </field>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_account_analytic_account_sla_stats">
           <field name="name">account_analytic_account_sla_stats</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <page string="Contract Information" position="after">
                    <page string="SLA stats" attrs="{'invisible':[('sla_status','=','NO SLA')]}">
                        <group>
                            <field name="number_successful_issue"/>
                            <field name="number_failed_issue"/>
                            <field name="number_closed_issue"/>
                            <field name="percent_successful_issue"/>
                            <field name="average_reaction_time"/>
                            <field name="average_exceeded_reaction_time"/>
                            <field name="issue_per_priority"/>
                            <field name="issue_per_user"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>
        
